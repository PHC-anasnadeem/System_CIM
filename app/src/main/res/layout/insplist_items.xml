    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_background"
        android:padding="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/hce_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#408ade"
            />
   <!--     <ImageView
            android:src="@drawable/location_icon_bottom"
            android:id="@+id/loctionicon"
            android:paddingTop="10dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/plamIDlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/hcenametext"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#408ade"
                android:inputType="textMultiLine"
                />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Reglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Regtext"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="PHC Registration No: "
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/basicinfolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Basictexttext"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Basic Info Changed: "
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Vistbylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Visitbytext"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visited by: "
                    android:inputType="textMultiLine"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/visitdatelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/visisdatetext"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit Date:  "
                    android:inputType="textMultiLine"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/visittimetext"
                    android:layout_marginLeft="20dp"
                    android:text="Visit Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/loclayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/loctext"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:text="Location Changed: "
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/locVistbylayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/locVisitbytext"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visited by: "
                        android:inputType="textMultiLine"

                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/locvisitdatelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/locvisisdatetext"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Date:  "
                        android:inputType="textMultiLine"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/locvisittimetext"
                        android:layout_marginLeft="20dp"
                        android:text="Visit Time: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
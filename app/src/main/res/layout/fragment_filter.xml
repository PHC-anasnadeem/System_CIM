<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phc.cim.Extra.FilterFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true">


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="-10dp"
            android:paddingTop="40dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/pages_bg_option2">

            <ImageView android:src="@drawable/phc_logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal" />
            <!--  Sector Type Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <Spinner
                    android:id="@+id/Sector_Type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    />
            </com.google.android.material.textfield.TextInputLayout>




            <!--  Council Type Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <Spinner
                    android:id="@+id/Council_Typespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:hint="Select Council Type"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--  HCE Type Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <Spinner
                    android:id="@+id/HCE_Typespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:hint="Select HCE Type"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Find Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_find"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:text="Find"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>